{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information",
      "GatewayService.Middleware.RequestLoggingMiddleware": "Information",
      "GatewayService.Middleware.RateLimitingMiddleware": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "xac-thuc-route": {
        "ClusterId": "xac-thuc-cluster",
        "Match": {
          "Path": "/api/v1/xac-thuc/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/xac-thuc/{**catch-all}" }
        ]
      },
      "nguoi-dung-route": {
        "ClusterId": "nguoi-dung-cluster",
        "Match": {
          "Path": "/api/v1/nguoi-dung/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/nguoi-dung/{**catch-all}" }
        ],
        "AuthorizationPolicy": "default"
      },
      "giao-an-route": {
        "ClusterId": "giao-an-cluster",
        "Match": {
          "Path": "/api/v1/giao-an/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/giao-an/{**catch-all}" }
        ],
        "AuthorizationPolicy": "default"
      },
      "mau-giao-an-route": {
        "ClusterId": "giao-an-cluster",
        "Match": {
          "Path": "/api/v1/mau-giao-an/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/mau-giao-an/{**catch-all}" }
        ]
      },
      "chu-de-route": {
        "ClusterId": "giao-an-cluster",
        "Match": {
          "Path": "/api/v1/chu-de/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/chu-de/{**catch-all}" }
        ]
      },
      "noi-dung-giao-duc-route": {
        "ClusterId": "giao-an-cluster",
        "Match": {
          "Path": "/api/v1/noi-dung-giao-duc/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/noi-dung-giao-duc/{**catch-all}" }
        ]
      },
      "muc-tieu-route": {
        "ClusterId": "giao-an-cluster",
        "Match": {
          "Path": "/api/v1/muc-tieu/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/muc-tieu/{**catch-all}" }
        ]
      },
      "cau-hoi-route": {
        "ClusterId": "cau-hoi-cluster",
        "Match": {
          "Path": "/api/v1/cau-hoi/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/cau-hoi/{**catch-all}" },
          { "RequestHeader": "X-User-Id", "Set": "{X-User-Id}" },
          { "RequestHeader": "X-User-Role", "Set": "{X-User-Role}" }
        ],
        "AuthorizationPolicy": "default"
      },
      "lua-chon-route": {
        "ClusterId": "cau-hoi-cluster",
        "Match": {
          "Path": "/api/v1/lua-chon/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/lua-chon/{**catch-all}" }
        ]
      },
      "de-thi-route": {
        "ClusterId": "cau-hoi-cluster",
        "Match": {
          "Path": "/api/v1/de-thi/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/de-thi/{**catch-all}" }
        ]
      },
      "bai-lam-route": {
        "ClusterId": "cau-hoi-cluster",
        "Match": {
          "Path": "/api/v1/bai-lam/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/bai-lam/{**catch-all}" }
        ]
      },
      "ket-qua-route": {
        "ClusterId": "cau-hoi-cluster",
        "Match": {
          "Path": "/api/v1/ket-qua/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/ket-qua/{**catch-all}" }
        ]
      },
      "hoc-sinh-route": {
        "ClusterId": "cau-hoi-cluster",
        "Match": {
          "Path": "/api/v1/hoc-sinh/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/hoc-sinh/{**catch-all}" }
        ]
      },
      "lop-hoc-route": {
        "ClusterId": "cau-hoi-cluster",
        "Match": {
          "Path": "/api/v1/lop-hoc/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/lop-hoc/{**catch-all}" }
        ]
      },
      "ket-qua-hoc-sinh-route": {
        "ClusterId": "cau-hoi-cluster",
        "Match": {
          "Path": "/api/v1/ket-qua-hoc-sinh/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/ket-qua-hoc-sinh/{**catch-all}" }
        ]
      },
      "ho-so-nguoi-dung-route": {
        "ClusterId": "nguoi-dung-cluster",
        "Match": {
          "Path": "/api/v1/ho-so-nguoi-dung/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/ho-so-nguoi-dung/{**catch-all}" }
        ]
      },
      "lich-su-hoat-dong-route": {
        "ClusterId": "nguoi-dung-cluster",
        "Match": {
          "Path": "/api/v1/lich-su-hoat-dong/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/lich-su-hoat-dong/{**catch-all}" }
        ]
      },
      "vai-tro-route": {
        "ClusterId": "xac-thuc-cluster",
        "Match": {
          "Path": "/api/v1/vai-tro/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/vai-tro/{**catch-all}" }
        ]
      },
      "phien-dang-nhap-route": {
        "ClusterId": "xac-thuc-cluster",
        "Match": {
          "Path": "/api/v1/phien-dang-nhap/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/api/v1/phien-dang-nhap/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "xac-thuc-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:8081/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "nguoi-dung-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:8082/"
          }
        },


        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "giao-an-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:8083/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "cau-hoi-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:8084/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://localhost:5173",
      "https://planbookai.vercel.app"
    ],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS", "PATCH"],
    "AllowedHeaders": ["*"],
    "AllowCredentials": true
  },
  "JwtSettings": {
    "SecretKey": "PlanbookAI-JWT-Secret-Key-2024-Super-Secure-256-Bit-Key-For-Production-Use-Only",
    "Issuer": "PlanbookAI.AuthService",
    "Audience": "PlanbookAI.Users",
    "ExpiryInHours": 24,
    "RefreshTokenExpiryInDays": 7
  },
  "RateLimiting": {
    "MaxRequests": 100,
    "WindowSizeInMinutes": 1,
    "EnableGlobalLimit": true,
    "EnablePerUserLimit": true
  },
  "Security": {
    "EnableHttpsRedirection": true,
    "EnableHsts": true,
    "EnableXssProtection": true,
    "EnableContentTypeOptions": true,
    "EnableFrameOptions": true,
    "EnableReferrerPolicy": true
  },
  "Monitoring": {
    "EnableMetrics": true,
    "EnableTracing": true,
    "EnablePerformanceCounters": true,
    "EnableHealthChecks": true
  }
}