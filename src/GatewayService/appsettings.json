{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information",
      "GatewayService.Middleware.RequestLoggingMiddleware": "Information",
      "GatewayService.Middleware.RateLimitingMiddleware": "Information"
    }
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "xac-thuc-route": {
        "ClusterId": "xac-thuc-cluster",
        "Match": {
          "Path": "/api/v1/xac-thuc/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ]
      },
      "nguoi-dung-route": {
        "ClusterId": "nguoi-dung-cluster",
        "Match": {
          "Path": "/api/v1/nguoi-dung/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ]
      },
      "giao-an-route": {
        "ClusterId": "giao-an-cluster",
        "Match": {
          "Path": "/api/v1/giao-an/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ]
      },
      "cau-hoi-route": {
        "ClusterId": "cau-hoi-cluster",
        "Match": {
          "Path": "/api/v1/cau-hoi/{**catch-all}"
        },
        "Transforms": [
          { "PathPattern": "/{**catch-all}" }
        ]
      }
    },
    "Clusters": {
      "xac-thuc-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:8081/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "nguoi-dung-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:8082/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "giao-an-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:8083/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      },
      "cau-hoi-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "http://host.docker.internal:8084/"
          }
        },
        "HealthCheck": {
          "Active": {
            "Enabled": true,
            "Interval": "00:00:30",
            "Timeout": "00:00:05",
            "Policy": "ConsecutiveFailures",
            "Path": "/health"
          }
        }
      }
    }
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:3001",
      "http://localhost:5173"
    ],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
    "AllowedHeaders": ["*"],
    "AllowCredentials": true
  },
  "JwtSettings": {
    "SecretKey": "PlanbookAI-JWT-Secret-Key-2024-Super-Secure-256-Bit-Key-For-Production-Use-Only",
    "Issuer": "PlanbookAI.Gateway",
    "Audience": "PlanbookAI.Users",
    "ExpiryInHours": 24,
    "RefreshTokenExpiryInDays": 7
  },
  "RateLimiting": {
    "MaxRequests": 100,
    "WindowSizeInMinutes": 1,
    "EnableGlobalLimit": true,
    "EnablePerUserLimit": true
  }
}